<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>

        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Register a new Account</h1>
                            <span class="subheading">Join our team!</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
       <!-- Main Content -->
<div class="container"> 
    <div class="row">
        <div class="col-lg-5 col-md-7 mx-auto" style="text-align:center">
            <% if(errors != null && errors.length > 0){ %>
                <ul class="list-group"></ul>
                <% for (var i = 0; i < errors.length; i++) { %>
                    <%console.log(errors.length,errors,errors[0])%>
                    <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                <% } %>
                </ul>
            <% } %>
            <form action="/users/register" method="Post" enctype="multipart/form-data" > 
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <input type="text" value="<%=username %>"class="form-control" placeholder="Username" id="username" name="username" style="text-align:center">
                    </div>
                </div>
                <br>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <input style="text-align:center" value="<%= password %>" type="password" class="form-control" placeholder="Password" id="password" name="password">
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Register</button>
                </div>
                
            </form>
        </div>
    </div>
</div>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>
